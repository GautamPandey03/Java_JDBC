pipeline {
    agent any

    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
            }
        }
         stage('Build') {
            steps {
                echo 'Buiding project'
            }
        }
 stage("build & SonarQube analysis") {
           steps {
              withSonarQubeEnv('sq1') {
                 sh 'mvn clean package sonar:sonar'
              }
          }
      }

     stage("Quality Gate") {
            steps {
              timeout(time: 1, unit: 'HOURS') {
                waitForQualityGate abortPipeline: true
              }
            }
          }
      
     }
}
